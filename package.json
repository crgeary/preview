{
  "name": "@crgeary/preview",
  "description": "Pull request previews with Github Actions",
  "scripts": {
    "run:cli": "node --env-file=.env dist/index.js",
    "build": "esbuild --outdir=dist --bundle --analyze --minify --platform=node src/index.ts",
    "build:watch": "pnpm build --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "author": "Christopher Geary",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/node": "^20.10.5",
    "esbuild": "^0.19.10",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  }
}
